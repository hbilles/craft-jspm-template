{% set cssVersion = '0.0.1' %}
{% set jsVersion = '0.0.1' %}

<!doctype html>

<html lang="en">

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>{% if metaTitle is defined %}{{ metaTitle }} {{ craft.config.titleBullet }} {% endif %}{{ siteName }}{% if homeTitle is defined %} {{ craft.config.titleBullet }} {{ homeTitle }}{% endif %}</title>
	{% if metaDescription is defined %}<meta name="description" content="{{ metaDescription }}">{% endif %}
	<meta name="viewport" content="width=device-width,initial-scale=1.0">
	<meta name="author" content="{{ siteName }}">

	{% include '_includes/_favicons' %}

	{% if canonicalUrl is defined %}<link rel="canonical" href="{{ canonicalUrl }}">{% endif %}

	{#{% include '_includes/_socialMediaHead' %}#}
	{% include '_includes/_stylesheets' %}
	{% include '_includes/_scriptsHead' %}
</head>

<body itemscope itemtype="http://schema.org/{% if pageSchema is defined %}{{ pageSchema }}{% else %}WebPage{% endif %}">
<script>
	var bdy = document.getElementsByTagName('body');
	bdy[0].className = 'js';
</script>

<div id="top"></div>

<div id="site"{% if pageClass is defined %} class="{{ pageClass }}"{% endif %}>

		<header id="site-header">
			<div class="sticky-nav-container">
				<nav class="top-nav">
					<div class="top-nav__in">
						<div class="top-nav__logo">
							<a class="site-logo" href="{{ siteUrl }}" title="{{ craft.config.homeLinkTitle }}">
								<img src="/assets/img/logo.png" alt="{{ siteName }}">
							</a>
						</div>
						<div class="nav-toggle">
							<span id="nav-toggle">
								<span class="nav-toggle__label">NAV</span>
								<span class="nav-toggle__bars"></span>
							</span>
						</div>
						{% include '_includes/_nav' with { class: 'fixed-menu' } %}
						{% include '_includes/_nav' with { class: 'mobile-menu' } %}
					</div>
				</nav>
				<nav class="logo-nav">
					<div class="logo-nav__in">
						<a class="site-logo" href="{{ siteUrl }}" title="{{ craft.config.homeLinkTitle }}">
							<img src="/assets/img/logo.png" alt="{{ siteName }}">
						</a>

						{% include '_includes/_nav' with { class: 'desktop-menu' } %}
					</div>
				</nav>
			</div>
		</header>
	
		<main id="content"{% if contentClass is defined %} class="{{ contentClass }}"{% endif %} itemprop="mainContentOfPage">
			{% block content %}
			{% endblock %}
		</main>
	
		{% include '_includes/_footer' %}

</div>{# /#site #}

{% include '_includes/_scriptsFooter' %}

</body>
</html>
